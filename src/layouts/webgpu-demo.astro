---
import WebGPUNotSupportedAlert from "$components/demo/WebGPUNotSupportedAlert.svelte"
import Body from "$components/layout/Body.astro"

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <Body>
    <WebGPUNotSupportedAlert client:only />
    <slot />
  </Body>
</html>
