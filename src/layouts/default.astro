---
import { SITE } from "$/config"
import BaseHead from "$/components/layout/BaseHead.astro"
import MainLayout from "$/components/layout/MainLayout.astro"
import PageHeader from "$/components/pages/index/PageHeader.astro"

interface Props {
  content: {
    title: string
    description: string
  }
  meta: {
    title: string
    description: string
    ogimage?: string
  }
}

const { content, meta } = Astro.props
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead
      title={meta.title ? `${SITE.title} | ${meta.title}` : SITE.title}
      description={meta.description}
      image={meta.ogimage ?? "/og-image.png"}
    />
  </head>
  <MainLayout>
    <div class="flex flex-col gap-14">
      <PageHeader title={content.title} subtitle={content.description} />
      <div class="page__content contents"><slot /></div>
    </div>
  </MainLayout>
</html>

<style>
  .page__content :global(h4) {
    @apply text-lg;

    border-image-source: linear-gradient(to right, currentColor, transparent);
    border-image-width: 0 0 1px 0;
    border-image-outset: 5px;
    border-image-slice: 1;

    /** 2行目以降字下げ */
    text-indent: -1em;
    padding-left: 1em;
  }
  .page__content :global(h4::before) {
    content: "$";
    padding-inline-end: 0.5em;
  }
  .page__content :global(h4 + p) {
    padding-inline-start: 0.5em;
  }
</style>
