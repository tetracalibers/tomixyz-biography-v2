---
import BaseHead from "$/components/layout/BaseHead.astro"
import MainLayout from "$/components/layout/MainLayout.astro"
import PageHeader from "$/components/pages/index/PageHeader.astro"
import Body from "$components/layout/Body.astro"

interface Props {
  content: {
    title: string
    subtitle: string
  }
  meta?: {
    description?: string
    ogimage?: string
  }
  style?: {
    title_small?: boolean
  }
}

const { content, meta, style } = Astro.props
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead
      title={content.title}
      description={meta?.description ?? content.subtitle}
      image={meta?.ogimage ?? "/og-image.png"}
    />
  </head>
  <Body>
    <MainLayout>
      <div class="MainLayout-inner" class:list={[{ "-title-small": style?.title_small }]}>
        <PageHeader title={content.title} style={style}>
          <slot name="subtitle">
            {content.subtitle}
          </slot>
        </PageHeader>
        <div class="slot-wrapper"><slot /></div>
      </div>
    </MainLayout>
  </Body>
</html>

<style>
  .MainLayout-inner {
    display: grid;
    gap: 3.5rem;
  }
  .MainLayout-inner.-title-small {
    gap: 3rem;
  }
  .slot-wrapper {
    display: contents;
  }
</style>
