---
import DefaultPageLayout from "$/layouts/default.astro"
import LikeSection from "$components/pages/like/LikeSection.astro"
import { getCollection } from "astro:content"

import "$/styles/prose-use-marker.css"
import { CATEGORY_META } from "$/config"

const meta = {
  ogimage: "/og/like.png"
}

const sections = (await getCollection("like")).sort((a, b) => a.data.order - b.data.order)
---

<DefaultPageLayout content={{ ...CATEGORY_META.like }} meta={{ ...meta }}>
  {sections.map((section) => <LikeSection section={section} />)}
</DefaultPageLayout>
