---
import { getCollection, type CollectionEntry, render } from "astro:content"
import ProjectLayout from "$/layouts/project.astro"
import { isDev, isPreviewBranch } from "$/lib/environment"

import "$/styles/prose-use-marker.css"

export async function getStaticPaths() {
  const collection = await getCollection("project")
  return collection.map((page) => {
    return {
      params: { slug: page.id },
      props: { page }
    }
  })
}

interface Props {
  page: CollectionEntry<"project">
}

const { page } = Astro.props
const { slug } = Astro.params

const { data } = page
const { meta, editing } = data

const { Content } = await render(page)
const isShowContent = isDev() || isPreviewBranch() || !editing

const ogimage = `/og/projects/${slug}.png`
---

<ProjectLayout content={page.data} meta={{ ogimage, ...meta }}>
  {isShowContent && <Content />}
</ProjectLayout>
