---
import { getCollection, type CollectionEntry } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"
import ProjectPreviewList from "$/components/preview/project/ProjectPreviewList.astro"
import Paginator from "$/components/pagination/Paginator.astro"
import { pinnedFirstDateSort } from "$/lib/sort"
import type { GetStaticPaths, Page } from "astro"
import { CATEGORY_META, PAGE_SIZE } from "$/config"

const meta = {
  ogimage: "/og/projects.png"
}

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const collection = (await getCollection("project")).sort(pinnedFirstDateSort)
  return paginate(collection, {
    pageSize: PAGE_SIZE
  })
}

interface Props {
  page: Page<CollectionEntry<"project">>
}

const { page } = Astro.props
---

<DefaultPageLayout content={{ ...CATEGORY_META.projects }} meta={{ ...meta }}>
  <ProjectPreviewList entries={page.data} />
  <Paginator page={page} />
</DefaultPageLayout>
