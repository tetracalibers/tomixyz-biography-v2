---
import { getCollection, type CollectionEntry } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"

export async function getStaticPaths() {
  const collection = await getCollection("page")
  return collection.map((page) => {
    const { slug } = page
    return {
      params: { slug },
      props: { page }
    }
  })
}

interface Props {
  page: CollectionEntry<"page">
}

const { page } = Astro.props
const { slug } = Astro.params

const { Content } = await page.render()
const { data } = page
const { title, description, meta } = data

const ogimage = slug ? `/og-image/${slug}.png` : "/og-image.png"
---

<DefaultPageLayout content={{ title, description }} meta={{ ogimage, ...meta }}>
  <Content />
</DefaultPageLayout>
