---
import { getCollection, render, type CollectionEntry } from "astro:content"
import EventLayout from "$/layouts/event.astro"
import { isDev, isPreviewBranch } from "$/lib/environment"

import "$/styles/prose-use-marker.css"

export async function getStaticPaths() {
  const collection = await getCollection("event")
  return collection.map((page) => {
    return {
      params: { slug: page.id },
      props: { page }
    }
  })
}

interface Props {
  page: CollectionEntry<"event">
}

const { page } = Astro.props
const { slug } = Astro.params

const { data } = page
const { meta, editing } = data

const { Content } = await render(page)
const isShowContent = isDev() || isPreviewBranch() || !editing

const ogimage = `/og/events/${slug}.png`
---

<EventLayout content={page.data} meta={{ ogimage, ...meta }}>
  {isShowContent && <Content />}
</EventLayout>
