---
import { getCollection, type CollectionEntry } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"
import BlogPreviewList from "$components/preview/blog/BlogPreviewList.astro"
import Paginator from "$/components/pagination/Paginator.astro"
import { compareDateForSort } from "$/lib/sort"
import type { GetStaticPaths, Page } from "astro"
import { PAGE_SIZE } from "$/config"

const title = "Blog"
const description = "考えていること"
const meta = {
  ogimage: "/og-image/blog.png"
}

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const collection = (await getCollection("blog")).sort(compareDateForSort)
  return paginate(collection, { pageSize: PAGE_SIZE })
}

interface Props {
  page: Page<CollectionEntry<"blog">>
}

const { page } = Astro.props
---

<DefaultPageLayout content={{ title, description }} meta={{ ...meta }}>
  <BlogPreviewList entries={page.data} />
  {PAGE_SIZE < page.total && <Paginator page={page} />}
</DefaultPageLayout>
