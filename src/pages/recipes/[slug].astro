---
import { getCollection, render } from "astro:content"
import RecipeLayout from "$/layouts/recipe.astro"
import { type RecipeNotComingSoon, isNotDraft } from "$/lib/collection"
import { or } from "$/lib/filter"
import { isDev, isPreviewBranch } from "$/lib/environment"

import "$/styles/prose-use-marker.css"

export async function getStaticPaths() {
  const collection = await getCollection("recipe", or(isDev, isPreviewBranch, isNotDraft))
  return collection.map((page) => {
    return {
      params: { slug: page.id },
      props: { page }
    }
  })
}

interface Props {
  page: RecipeNotComingSoon
}

const { page } = Astro.props
const { slug } = Astro.params

const { data } = page
const { meta } = data

const { Content, headings } = await render(page)

const ogimage = `/og/recipes/${slug}.png`
---

<RecipeLayout entry={page} meta={{ ogimage, ...meta }} headings={headings}>
  <Content />
</RecipeLayout>
