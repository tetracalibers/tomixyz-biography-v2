---
import { getCollection, render, type CollectionEntry } from "astro:content"
import RecipeLayout from "$/layouts/recipe.astro"
import { getLastSlug } from "$/lib/url"
import { type RecipeNotComingSoon, isNotDraft } from "$/lib/collection"
import { and, or } from "$/lib/filter"
import { isDev, isPreviewBranch } from "$/lib/environment"

import "$/styles/prose-use-marker.css"

export async function getStaticPaths() {
  const filterSeries = (entry: CollectionEntry<"recipe">) => {
    return !!entry.data.series
  }

  const collection = await getCollection("recipe", and(filterSeries, or(isDev, isPreviewBranch, isNotDraft)))
  return collection.map((page) => {
    return {
      params: { series: page.data.series!.id, slug: getLastSlug(page.id) },
      props: { page }
    }
  })
}

interface Props {
  page: RecipeNotComingSoon
}

const { page } = Astro.props
const { slug, series } = Astro.params

const { data } = page
const { meta } = data

const { Content, headings } = await render(page)

const ogimage = `/og/recipes/${series}/${slug}.png`
---

<RecipeLayout entry={page} meta={{ ogimage, ...meta }} headings={headings}>
  <Content />
</RecipeLayout>
