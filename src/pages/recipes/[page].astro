---
import { getCollection } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"
import Paginator from "$/components/pagination/Paginator.astro"
import { compareDateForSort } from "$/lib/sort"
import type { GetStaticPaths, Page } from "astro"
import RecipePreviewList from "$components/preview/recipe/RecipePreviewList.astro"
import { CATEGORY_META, PAGE_SIZE } from "$/config"
import { isDraftNotComingSoon, type RecipeNotComingSoon } from "$/lib/collection"
import { isDev, isPreviewBranch, isProdBranch } from "$/lib/environment"
import { and, or } from "$/lib/filter"
import { isNotDraft } from "$/lib/collection"

const meta = {
  ogimage: "/og/recipe.png"
}

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const collection = (
    await getCollection(
      "recipe",
      or<any, RecipeNotComingSoon>(
        and(or(isDev, isPreviewBranch), or(isNotDraft, isDraftNotComingSoon)),
        and(isProdBranch, isNotDraft)
      )
    )
  ).sort(compareDateForSort)
  return paginate(collection, { pageSize: PAGE_SIZE })
}

interface Props {
  page: Page<RecipeNotComingSoon>
}

const { page } = Astro.props
---

<DefaultPageLayout content={{ ...CATEGORY_META.recipes }} meta={{ ...meta }}>
  <RecipePreviewList entries={page.data} />
  {PAGE_SIZE < page.total && <Paginator page={page} />}
</DefaultPageLayout>
