---
import type { MarkdownHeading } from "astro"

interface Props {
  headings: MarkdownHeading[]
}

const { headings } = Astro.props
const showHeadings = headings.filter((heading) => heading.depth < 4)
---

{
  showHeadings.length > 0 && (
    <ul class="BlogToc">
      {showHeadings.map((heading) => (
        <li>
          <a href={`#${heading.slug}`} class="toc-link" class:list={[`_depth-${heading.depth}`]}>
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  )
}

<style>
  .BlogToc {
    display: grid;
    gap: 0.5rem;
    width: fit-content;
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .toc-link {
    display: flex;
    gap: 1rem;
    color: inherit;
    text-decoration: none;
  }
  .toc-link:hover {
    color: light-dark(#475569, #e2e8f0);
    text-decoration: underline;
    font-weight: 500;

    text-underline-offset: 0.25rem;
    text-decoration-thickness: 1px;
    text-decoration-style: dotted;
  }
  .toc-link::before {
    flex-shrink: 0;
    width: 2ch;
    text-align: end;
  }
  ._depth-2::before {
    content: "##";
  }
  ._depth-3::before {
    content: "-";
  }
  ._depth-3 {
    font-size: 0.9em;
  }
</style>
