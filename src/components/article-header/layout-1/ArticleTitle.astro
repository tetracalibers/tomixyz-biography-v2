---
import LeadingTrimText from "$components/text/LeadingTrimText.astro"

interface Props {
  title: string
}

const { title } = Astro.props
---

<LeadingTrimText tag="h1" classList={["ArticleTitle"]}>
  {title}
</LeadingTrimText>

<style>
  .ArticleTitle {
    font-size: 2.25rem;
    line-height: 1.2;
    font-weight: 800;
    text-align: center;
    word-break: auto-phrase;
    margin: 0;
    color: light-dark(var(--slate-500), var(--slate-200));
  }
  @media (min-width: 768px) {
    .ArticleTitle {
      font-size: 3rem;
      text-align: start;
    }
  }
</style>
