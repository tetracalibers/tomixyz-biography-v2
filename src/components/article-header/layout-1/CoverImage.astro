---
import type { ImageMetadata } from "astro"
import { Image } from "astro:assets"

interface Props {
  src: ImageMetadata
  alt: string
}

const { src, alt } = Astro.props
---

<Image class="CoverImage" src={src} alt={alt} />

<style>
  .CoverImage {
    overflow: hidden;
    position: relative;
    border-radius: 0.5rem;
    width: 100%;
    filter: drop-shadow(0 3px 3px rgb(0 0 0 / 0.12));
  }
</style>
