---
import { formatDate } from "$/lib/date"

interface Props {
  date: Date
}

const { date } = Astro.props
---

<time class="DateFormat" datetime={formatDate(date, "-")}>
  {new Intl.DateTimeFormat("en-US", { dateStyle: "long" }).format(date)}
</time>

<style>
  .DateFormat {
    display: block;
    color: light-dark(var(--slate-400), var(--slate-300));
    font-weight: bold;
    font-style: italic;
    text-align: end;
  }
</style>
