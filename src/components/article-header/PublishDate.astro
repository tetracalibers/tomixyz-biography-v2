---
interface Props {
  date: string
}

const { date } = Astro.props
---

<time class="PublishDate" datetime={date}>
  {date.replaceAll(/-/g, ".")}
</time>

<style>
  .PublishDate {
    display: block;
    color: light-dark(var(--slate-400), var(--slate-300));
    font-weight: bold;
    font-style: italic;
    text-align: end;
  }
</style>
