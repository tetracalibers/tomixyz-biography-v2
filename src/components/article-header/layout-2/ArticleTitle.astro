---
interface Props {
  title: string
}

const { title } = Astro.props
---

<h1 class="ArticleTitle">{title}</h1>

<style>
  .ArticleTitle {
    margin: 0;
    color: light-dark(var(--slate-500), var(--slate-200));
    font-size: clamp(2.5rem, 2.324rem + 0.751vw, 3rem);
    line-height: 2.5rem;
    font-weight: 800;
    line-height: 1;
  }
</style>
