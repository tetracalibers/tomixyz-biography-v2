---
import PublishDate from "../PublishDate.astro"
import AvatarImage from "./AvatarImage.astro"

interface Props {
  date: string
  updated?: string
}

const { date, updated } = Astro.props
---

<div class="ArticleHeaderBlock">
  <div class="content">
    <slot />
  </div>
  <div class="meta">
    <AvatarImage />
    <div class="meta-content">
      <span class="date">Published: <PublishDate date={date} /></span>
      {
        updated && (
          <span class="date">
            Last Updated: <PublishDate date={updated} />
          </span>
        )
      }
    </div>
  </div>
</div>

<style>
  .ArticleHeaderBlock {
    display: grid;
    gap: 2rem;
    padding-block: 1rem;
    margin-block-end: 1rem;
    text-align: center;
  }
  @media (min-width: 640px) {
    .ArticleHeaderBlock {
      margin-inline: 1.5rem;
    }
  }
  @media (min-width: 768px) {
    .ArticleHeaderBlock {
      text-align: left;
    }
  }

  .content {
    display: contents;
  }

  .meta {
    color: light-dark(var(--gray-500), var(--gray-100));
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    text-align: left;
  }
  @media (min-width: 768px) {
    .meta {
      flex: none;
      justify-content: flex-start;
    }
  }

  .meta-content {
    display: grid;
    padding-inline-start: 0.5rem;
    border-inline-start-style: solid;
    border-inline-start-width: 2px;
    border-inline-start-color: light-dark(var(--slate-200), var(--slate-500));
    align-items: end;
    justify-content: flex-start;
    padding-block: 0.5rem;
  }

  .date {
    color: light-dark(var(--slate-400), var(--slate-300));
    font-weight: bold;
    display: flex;
    justify-content: flex-end;
    gap: 1ch;
  }
</style>
