---
import type { CollectionEntry } from "astro:content"
import { Image } from "astro:assets"
import PublishDate from "./PublishDate.astro"
import { SITE } from "$/config"

interface Props {
  entry: CollectionEntry<"project">
}

const {
  entry: { data: project, id }
} = Astro.props

const pageUrl = SITE.base + "/projects/" + id
---

<div class="ProjectPreview">
  <div class="ProjectPreview-text">
    <div class="text-inner">
      <PublishDate date={project.date} />
      <div class="content">
        <h2 class="title">
          <a href={pageUrl}>{project.title}</a>
        </h2>
        <p class="desc">
          {project.description}
        </p>
      </div>
    </div>
  </div>
  {
    project.image && (
      <div class="ProjectPreview-thumb">
        <Image src={project.image} alt={project.title} />
      </div>
    )
  }
</div>

<style>
  .ProjectPreview {
    --breakpoint: 500px;

    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .ProjectPreview-text {
    display: flex;
    flex-basis: calc((var(--breakpoint) - 100%) * 999);
    flex-grow: 1;
    align-items: center;
  }
  .text-inner {
    display: grid;
    grid-template-columns: max(20%, 105px) 1fr;
    justify-items: start;
    align-items: center;
    gap: 0.75rem;
    position: relative;
    container-type: inline-size;
    width: 100%;
  }
  .content {
    display: grid;
    justify-content: center;
    gap: 0.5rem;
  }
  @media (max-width: 499px) {
    .content {
      grid-column: 1 / -1;
    }
  }
  .title {
    margin: 0;
  }
  .title a {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 600;
    color: light-dark(var(--slate-500), var(--slate-200));
    text-decoration: none;
  }
  .title a:hover {
    text-decoration: underline;
  }
  .desc {
    margin: 0;
    line-height: 1.5rem;
    hyphens: auto;
    color: light-dark(var(--slate-800), white);
  }
  .ProjectPreview-thumb {
    flex-basis: calc((var(--breakpoint) - 100%) * 999);
    flex-grow: 0.5;
  }
  .ProjectPreview-thumb :global(img) {
    width: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 0.375rem;
  }

  .ProjectPreview {
    --theme-base: #fcd888;
  }
  .ProjectPreview:nth-child(2n) {
    --theme-base: #b8f1f8;
  }
  .ProjectPreview:nth-child(3n) {
    --theme-base: #fcdce0;
  }
  .ProjectPreview:nth-child(4n) {
    --theme-base: #c6d9fd;
  }
  .ProjectPreview:nth-child(5n) {
    --theme-base: #ccf5e6;
  }
  .ProjectPreview:nth-child(6n) {
    --theme-base: #f9c0e7;
  }
  .ProjectPreview :global(.PublishDate svg) {
    --dark-color: oklch(from var(--theme-base) l calc(c + 0.05) h);
    color: light-dark(var(--theme-base), var(--dark-color));
    opacity: 0.6;
  }
  :global(.dark) .ProjectPreview :global(.PublishDate svg) {
    opacity: 0.4;
  }
</style>
