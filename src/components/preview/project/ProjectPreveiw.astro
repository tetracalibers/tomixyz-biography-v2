---
import type { CollectionEntry } from "astro:content"
import { Image } from "astro:assets"
import PublishDate from "$components/article-link/PublishDate.astro"
import { SITE } from "$/config"

interface Props {
  entry: CollectionEntry<"project">
}

const {
  entry: { data: project, id }
} = Astro.props

const pageUrl = SITE.base + "/projests/" + id
---

<div class="ProjectPreview">
  <div class="ProjectPreview-text">
    <div class="text-inner">
      <PublishDate date={project.date} />
      <div class="content">
        <h2 class="title">
          <a href={pageUrl} title={project.title}>{project.title}</a>
        </h2>
        <p class="desc">
          {project.description}
        </p>
      </div>
    </div>
  </div>
  {
    project.image && (
      <div class="ProjectPreview-thumb">
        <Image src={project.image} alt={project.title} />
      </div>
    )
  }
</div>

<style>
  .ProjectPreview {
    --breakpoint: 500px;

    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .ProjectPreview-text {
    display: flex;
    flex-basis: calc((var(--breakpoint) - 100%) * 999);
    flex-grow: 1;
    align-items: center;
  }
  .text-inner {
    display: grid;
    grid-template-columns: max(20%, 100px) 1fr;
    place-items: center;
    gap: clamp(1rem, 0.648rem + 1.502vw, 2rem);
  }
  .content {
    display: grid;
    justify-content: center;
    gap: 0.5rem;
  }
  .title {
    margin: 0;
  }
  .title a {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 600;
    color: light-dark(var(--slate-500), var(--slate-200));
    text-decoration: none;
  }
  .title a:hover {
    text-decoration: underline;
  }
  .desc {
    margin: 0;
    line-height: 1.5rem;
    hyphens: auto;
    color: light-dark(var(--slate-800), white);
  }
  .ProjectPreview-thumb {
    flex-basis: calc((var(--breakpoint) - 100%) * 999);
    flex-grow: 0.5;
  }
  .ProjectPreview-thumb :global(img) {
    width: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 0.375rem;
  }

  .ProjectPreview :global(.PublishDate svg) {
    color: #fcd888;
  }
  .ProjectPreview:nth-child(2n) :global(.PublishDate svg) {
    color: #b8f1f8;
  }
  .ProjectPreview:nth-child(3n) :global(.PublishDate svg) {
    color: #fcdce0;
  }
  .ProjectPreview:nth-child(4n) :global(.PublishDate svg) {
    color: #c6d9fd;
  }
  .ProjectPreview:nth-child(5n) :global(.PublishDate svg) {
    color: #ccf5e6;
  }
  .ProjectPreview:nth-child(6n) :global(.PublishDate svg) {
    color: #f9c0e7;
  }
</style>
