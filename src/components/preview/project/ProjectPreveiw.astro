---
import type { CollectionEntry } from "astro:content"
import { Image } from "astro:assets"
import PublishDate from "$components/article-link/PublishDate.astro"
import { SITE } from "$/config"

interface Props {
  entry: CollectionEntry<"project">
}

const {
  entry: { data: project, id }
} = Astro.props

const pageUrl = SITE.base + "/projests/" + id
---

<div class="ProjectPreview">
  <div class="ProjectPreview-text">
    <div class="date sm:w-20 md:w-32">
      <PublishDate date={project.date} />
    </div>
    <div class="content">
      <h2 class="title">
        <a href={pageUrl} title={project.title}>{project.title}</a>
      </h2>
      <p class="desc">
        {project.description}
      </p>
    </div>
  </div>
  {
    project.image && (
      <div class="ProjectPreview-thumb">
        <Image src={project.image} alt={project.title} />
      </div>
    )
  }
</div>

<style>
  .ProjectPreview {
    --breakpoint: 500px;

    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .ProjectPreview-text {
    display: flex;
    flex-basis: calc((var(--breakpoint) - 100%) * 999);
    flex-grow: 1;
    column-gap: 1rem;
    align-items: center;
  }
  .content {
    display: grid;
    justify-content: center;
    gap: 0.5rem;
  }
  .title {
    margin: 0;
  }
  .title a {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 600;
    color: light-dark(var(--slate-500), var(--slate-200));
    text-decoration: none;
  }
  .title a:hover {
    text-decoration: underline;
  }
  .desc {
    margin: 0;
    line-height: 1.5rem;
    hyphens: auto;
    color: light-dark(var(--slate-800), white);
  }
  .ProjectPreview-thumb {
    flex-basis: calc((var(--breakpoint) - 100%) * 999);
    flex-grow: 0.5;
  }
  .ProjectPreview-thumb :global(img) {
    width: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 0.375rem;
  }
</style>
