---
import type { CollectionEntry } from "astro:content"
import { Image } from "astro:assets"
import PublishDate from "./PublishDate.astro"
import { SITE } from "$/config"

interface Props {
  entry: CollectionEntry<"event">
}

const {
  entry: { data: event, id }
} = Astro.props

const pageUrl = SITE.base + "/events/" + id
---

<div class="EventPreview">
  <div class="EventPreview-text">
    <div class="text-inner">
      <PublishDate date={event.date} />
      <div class="content">
        <h2 class="title">
          <a href={pageUrl} title={event.title}>{event.title}</a>
        </h2>
        <p class="desc">
          {event.description}
        </p>
      </div>
    </div>
  </div>
  {
    event.image && (
      <div class="EventPreview-thumb">
        <Image src={event.image} alt={event.title} />
      </div>
    )
  }
</div>

<style>
  .EventPreview {
    --breakpoint: 500px;

    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .EventPreview-text {
    display: flex;
    flex-basis: calc((var(--breakpoint) - 100%) * 999);
    flex-grow: 1;
    column-gap: 1rem;
    align-items: center;
  }
  .text-inner {
    display: grid;
    grid-template-columns: max(20%, 105px) 1fr;
    justify-items: start;
    align-items: center;
    column-gap: 0.75rem;
    position: relative;
    container-type: inline-size;
    width: 100%;
  }
  .content {
    display: grid;
    justify-content: center;
    gap: 0.5rem;
  }
  @media (max-width: 499px) {
    .content {
      grid-column: 1 / -1;
    }
  }
  .title {
    margin: 0;
  }
  .title a {
    color: light-dark(var(--slate-500), var(--slate-200));
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 600;
    text-decoration: none;
  }
  .title a:hover {
    text-decoration: underline;
  }
  .desc {
    margin: 0;
    line-height: 1.5rem;
    hyphens: auto;
    color: light-dark(var(--slate-800), white);
  }
  .EventPreview-thumb {
    flex-basis: calc((var(--breakpoint) - 100%) * 999);
    flex-grow: 0.5;
  }
  .EventPreview-thumb :global(img) {
    width: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 0.375rem;
  }

  .EventPreview :global(.PublishDate svg) {
    color: #fcd888;
  }
  .EventPreview:nth-child(2n) :global(.PublishDate svg) {
    color: #b8f1f8;
  }
  .EventPreview:nth-child(3n) :global(.PublishDate svg) {
    color: #fcdce0;
  }
  .EventPreview:nth-child(4n) :global(.PublishDate svg) {
    color: #c6d9fd;
  }
  .EventPreview:nth-child(5n) :global(.PublishDate svg) {
    color: #ccf5e6;
  }
  .EventPreview:nth-child(6n) :global(.PublishDate svg) {
    color: #f9c0e7;
  }
  :global(.dark) .EventPreview :global(.PublishDate svg) {
    opacity: 0.6;
  }
</style>
