---
interface Props {
  title: string
  url: string
  date: string
  media?: string
}

const { title, url, date, media } = Astro.props
---

<div class="WritingPreview">
  <a class="link-container" href={url}>
    <div class="background"></div>
    <div class="inner">
      <div class="content">
        <h2 class="title">
          {title}
        </h2>
        {media && <p class="desc">{media}</p>}
      </div>
      <div class="date">
        {date}
      </div>
    </div>
  </a>
</div>

<style>
  .WritingPreview {
    overflow: hidden;
    border-radius: 28px;
    background-color: aliceblue;
  }
  .link-container {
    display: block;
    padding: 2em 1.5em;
    height: 100%;
    box-sizing: border-box;
    position: relative;
    text-decoration: none;
  }
  .inner {
    display: grid;
    gap: 0.5rem;
    height: 100%;
    grid-template-rows: 1fr auto;
  }
  .content {
    display: grid;
    grid-template-rows: 1fr auto;
    align-items: center;
    gap: 0.5rem;
    min-height: 87px;
    overflow: hidden;
    font-weight: bold;
    font-size: 30px;
    color: #fff;
    z-index: 2;
    position: relative;
  }
  .date {
    font-weight: bold;
    color: #f9b234;
    transition: color 0.5s ease;
  }
  .background {
    height: 128px;
    width: 128px;
    background-color: #f9b234;
    z-index: 1;
    position: absolute;
    top: -75px;
    right: -75px;
    border-radius: 50%;
    transition: all 0.5s ease;
  }
  .link-container:hover .background {
    transform: scale(7);
  }
  .WritingPreview:nth-child(2n) .background {
    background: radial-gradient(#1fe4f5, #3fbafe);
  }
  .WritingPreview:nth-child(3n) .background {
    background: radial-gradient(#fbc1cc, #fa99b2);
  }
  .WritingPreview:nth-child(4n) .background {
    background: radial-gradient(#76b2fe, #b69efe);
  }
  .WritingPreview:nth-child(5n) .background {
    background: radial-gradient(#60efbc, #58d5c9);
  }
  .WritingPreview:nth-child(6n) .background {
    background: radial-gradient(#f588d8, #c0a3e5);
  }

  .title {
    margin: 0;
    color: light-dark(var(--slate-500), var(--slate-200));
  }
  .desc {
    margin: 0;
    color: light-dark(var(--prose-body), white);
    font-size: 1rem;
    line-height: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    hyphens: auto;
  }
</style>
