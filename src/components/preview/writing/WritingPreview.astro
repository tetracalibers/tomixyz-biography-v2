---
import PublishMonth from "$components/article-link/PublishMonth.astro"

interface Props {
  title: string
  url: string
  date: string
  media?: string
}

const { title, url, date, media } = Astro.props
---

<div class="WritingPreview">
  <div class="PublishMonth-wrapper">
    <PublishMonth date={date} />
  </div>
  <div class="WritingPreview-content">
    <h2 class="title">
      <a href={url}>{title}</a>
    </h2>
    {media && <p class="desc">{media}</p>}
  </div>
</div>

<style>
  .WritingPreview {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .PublishMonth-wrapper {
    width: 5rem;
  }
  @media (min-width: 768px) {
    .PublishMonth-wrapper {
      width: 8rem;
    }
  }
  .WritingPreview-content {
    display: grid;
    flex: 1 1 0%;
  }
  .title {
    margin: 0;
    margin-block-end: 0.5rem;
  }
  .title a {
    color: light-dark(var(--slate-500), var(--slate-200));
    font-size: 1.25rem;
    font-weight: 600;
    text-decoration: none;
  }
  .title a:hover {
    text-decoration: underline;
  }
  .desc {
    margin: 0;
    color: light-dark(var(--prose-body), white);
    font-size: 1rem;
    line-height: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    hyphens: auto;
  }
</style>
