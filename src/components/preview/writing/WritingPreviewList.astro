---
import { getEntry } from "astro:content"
import MediaPreview from "./WritingPreview.astro"

interface Props {
  id: string
}

const { id } = Astro.props
const list = await getEntry("writing", id)
---

<div class="WritingPreviewList">
  {list?.data.map((item) => <MediaPreview item={item} />)}
</div>

<style>
  .WritingPreviewList {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }
</style>
