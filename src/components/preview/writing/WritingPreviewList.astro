---
import MediaPreview from "./WritingPreview.astro"

interface Post {
  title: string
  url: string
  date: string
  media?: string
}

interface Props {
  list: Post[]
}

const { list } = Astro.props
---

<div class="WritingPreviewList">
  {list.map((obj) => <MediaPreview {...obj} />)}
</div>

<style>
  .WritingPreviewList {
    display: grid;
    gap: 3rem;
  }
</style>
