---
import type { CollectionEntry } from "astro:content"
import PublishDate from "./PublishDate.astro"
import { SITE } from "$/config"

interface Props {
  entry: CollectionEntry<"recipe">
}

const {
  entry: { data: recipe, id }
} = Astro.props

const pageUrl = SITE.base + "/recipes/" + id
---

<div class="post-preview">
  <div class="sm:w-20 md:w-32">
    <PublishDate date={recipe.date} />
  </div>
  <div class="flex-1 flex flex-col justify-center">
    <h2 class="post-preview__title dark:text-theme-dark-primary">
      <a href={pageUrl} title={recipe.title}>{recipe.title}</a>
    </h2>
    <p class="post-preview__desc">
      {recipe.description}
    </p>
  </div>
</div>

<style>
  .post-preview {
    @apply flex gap-6;
  }
  .post-preview__title {
    @apply text-2xl font-semibold text-theme-primary dark:text-theme-dark-primary /* this doesn't works here */ hover:underline mb-2;
  }
  .post-preview__desc {
    @apply leading-6 dark:text-white hyphens-auto;
  }
</style>
