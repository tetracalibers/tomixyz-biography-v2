---
import TagLink from "$components/tag/TagLink.astro"
import { collectTagIdsWithCount, getRefTagCollection } from "$/lib/tag"

const targets = await getRefTagCollection()
const tags = collectTagIdsWithCount(targets).sort((a, b) => a.id.localeCompare(b.id))
---

<ul class="TagsList">
  {
    tags.map((tag) => (
      <li>
        <TagLink tagId={tag.id} count={tag.count} />
      </li>
    ))
  }
</ul>

<style>
  .TagsList {
    display: flex;
    list-style-type: none;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin: 0;
    padding: 0;
  }
</style>
