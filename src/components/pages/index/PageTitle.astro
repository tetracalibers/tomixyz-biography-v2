---
import LeadingTrimText from "$components/text/LeadingTrimText.astro"

interface Props {
  title: string
  small?: boolean
}

const { title, small = false } = Astro.props
---

<LeadingTrimText tag="h1" trim="start" classList={["PageTitle", { "-small": small }]}>
  {title}
</LeadingTrimText>

<style>
  .PageTitle {
    line-height: 1.5;
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
    color: light-dark(var(--slate-500), var(--slate-200));
  }
  .PageTitle.-small {
    font-size: 2rem;
  }
</style>
