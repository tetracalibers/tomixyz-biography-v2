---
import LeadingTrimText from "$components/text/LeadingTrimText.astro"

interface Props {
  title: string
}

const { title } = Astro.props
---

<LeadingTrimText tag="h1" trim="start" className="PageTitle">
  {title}
</LeadingTrimText>

<style>
  .PageTitle {
    line-height: 1.5;
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
    color: light-dark(var(--slate-500), var(--slate-200));
  }
</style>
